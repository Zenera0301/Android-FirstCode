<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:columnCount="6"
    android:background="@mipmap/bg"
    tools:context=".MainActivity">
    <!--  NO1  -->
    <TextView
        android:id="@+id/textview1"
        android:background="@drawable/bg_textview"
        android:maxWidth="180dp"
        android:text="你好，好久不见，最近忙啥呢？"
        android:textColor="#16476b"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_columnSpan="4"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/imageview2"
        android:src="@mipmap/ico2"
        android:layout_column="5"
        android:layout_row="0" />
    <!--  NO2  -->
    <ImageView
        android:id="@+id/imageview3"
        android:src="@mipmap/ico1"
        android:layout_column="0"
        android:layout_row="1" />
    <TextView
        android:id="@+id/textview2"
        android:background="@drawable/bg_textview2"
        android:maxWidth="180dp"
        android:text="最近在忙手机APP的事情，没多少时间上qq"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_marginBottom="20dp"/>
    <!--  NO3  -->
    <TextView
        android:id="@+id/textview3"
        android:background="@drawable/bg_textview"
        android:maxWidth="180dp"
        android:text="那进展如何，需要我帮忙吗？"
        android:textColor="#16476b"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_columnSpan="4"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/imageview6"
        android:src="@mipmap/ico2"
        android:layout_column="5"
        android:layout_row="2" />
    <!--  NO4 -->
    <ImageView
        android:id="@+id/imageview7"
        android:src="@mipmap/ico1"
        android:layout_column="0"
        android:layout_row="3" />
    <TextView
        android:id="@+id/textview4"
        android:background="@drawable/bg_textview2"
        android:maxWidth="180dp"
        android:text="快好了快好了，有需要我不会客气的"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_row="1"
        android:layout_marginBottom="20dp"/>
</GridLayout>